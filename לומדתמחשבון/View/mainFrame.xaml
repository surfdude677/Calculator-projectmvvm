<Window x:Class="לומדתמחשבון.View.mainFrame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:לומדתמחשבון.View"
        mc:Ignorable="d"
        Title="mainFrame" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Add" Name="addMenu" Click="ClickAdd" />
            <MenuItem Header="Search" Name="searchMenu" />
            <MenuItem Header="Exit" Name="exitMenu" Click="ClickClose"/>
        </Menu>
        <Frame x:Name="mainFrame" NavigationUIVisibility="Visible" Grid.Row="1"/>

    </Grid>
</Window>
